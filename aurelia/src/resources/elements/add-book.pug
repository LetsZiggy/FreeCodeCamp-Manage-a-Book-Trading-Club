template
  #add-book-background(click.delegate="closeAddBook()")
  #add-book-close-button(click.delegate="closeAddBook()")
    img(src="https://material.io/tools/icons/static/icons/baseline-close-24px.svg")

  #add-book-container
    #add-book-form
      input#add-book-form-input(type="text" placeholder="Search book title" keydown.delegate="handleKeydown($event)")
      #add-book-form-button(click.delegate="searchBookTitle()")
        img(src="https://material.io/tools/icons/static/icons/baseline-search-24px.svg")

    #add-book-no-results(if.bind="!results.length") No books to show ...
    #add-book-results(if.bind="results.length")
      .result(repeat.for="result of results" ref="result.elem" click.delegate="addBookSelect(result)")
        input.result-checkbox(type="checkbox")
        .result-details
          span.result-details-selected
            img(src="https://material.io/tools/icons/static/icons/baseline-check-24px.svg")
          span.result-details-image
            img(src="${result.image}")

    button#add-button-confirm(click.delegate="addButtonConfirm()" disabled) Confirm

  #add-book-request-error
    | Sorry. There is an error processing your request.
    br
    | Please try again later.